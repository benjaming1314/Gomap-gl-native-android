<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gomap.sdk.maps.MapView
        android:id="@id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mapbox_cameraTargetLat="45.1855569"
        app:mapbox_cameraTargetLng="5.7215506"
        app:mapbox_cameraZoom="11"
        app:mapbox_uiAttributionGravity="top|end"
        app:mapbox_uiLogoGravity="top|end"
        app:mapbox_uiLogoMarginRight="28dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_find_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Find Center"/>

        <TextView
            android:id="@+id/txt_search_poi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Search Nearby Poi"/>


    </LinearLayout>


</RelativeLayout>
